{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Description</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.firstName }}</td>
                <td>{{ review.lastName }}</td>
                <td>{{ review.description }}</td>
                <td>{{ review.category }}</td>
                <td>
                    <a href="{{ path('app_home_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('app_home_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_home_new') }}">Create new</a>
{% endblock %}
